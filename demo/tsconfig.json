{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": false,
    "diagnostics": true,
    "lib": ["es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"]
    }
  },
  "exclude": ["node_modules", "platforms", "**/*.aot.ts", "../src/node_modules"]
}
